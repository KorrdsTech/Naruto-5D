{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.tita.move": {
      "states": {
        "default": {
          "animations": [
            {
              "moving": "query.modified_move_speed"
            }
          ]
        }
      }
    },
    "controller.animation.tita.general": {
      "states": {
        "default": {
          "animations": [
            "tita_general",
            "look_at_target"
          ]
        }
      }
    },
    
    "controller.animation.tita.atacar": {
      "states": {
        "default": {
          "transitions": [
            {
              "ataque": "variable.attack>0"
            }
          ]
        },
        "atacar": {
          "animations": [
            "atacando"
          ],
          "transitions": [
            {
              "default": "query.all_animations_finished"
            }
          ]
        }
      }
    }
  }
}