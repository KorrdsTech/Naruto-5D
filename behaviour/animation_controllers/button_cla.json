{  
	"format_version": "1.10.0",   
	"animation_controllers": {  
		"controller.animation.c_cla_ui": {  
			"states": {    
				"default": { "transitions": [ {"v0": "(1.0)"} ] },    
			 	"v0": {  
	    	  "animations" : [ "cla_ui_id" ],
			 		"transitions": [ 
			 		  {"v1": "(query.mark_variant == 1)"},
			 		  {"v3": "(query.mark_variant == 3)"}
			 	],
			 		"on_entry": [
					    "variable.id_1 = 0;",
					    "variable.id_3 = 0;"
				  ]   
		  },
			 	"v1": {  
			 		"transitions": [ {"v0": "(query.mark_variant != 1)"} ],
		 			"on_entry": [
					    "variable.id_1 = 1;"
				  ]   
		  },
			 	"v3": {  
			 		"transitions": [ {"v0": "(query.mark_variant != 3)"} ],
		 			"on_entry": [
					    "variable.id_1 = 0;",
					    "variable.id_3 = 1;"
				  ]   
		  }
	 	}   
  }
  } 
}