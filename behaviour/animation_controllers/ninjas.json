{
  "format_version":"1.10.0",
  "animation_controllers": {
    "controller.animation.hyuga.walk": {
      "states": {
        "default": {
          "animations": [
            {
              "walk": "query.modified_move_speed"
            },
            "look_at_target",
            "bob"
          ]
        }
      }
    },
    "controller.animation.hyuga.attack": {
      "initial_state": "default",
      "states": {
        "default": {
          "transitions": [
            { "attacking": "query.is_standing" },
            { "roaring": "query.is_roaring == 1" }
          ]
        },
        "attacking": {
          "animations": [
            "attack"
          ],
          "transitions": [
            { "default" : "!query.is_standing" }
          ]
        },
        "roaring": {
          "animations": [ "roaring" ],
          "transitions": [
            { "default": "query.is_roaring == 0" }
          ]
        }
      }
    }
  }
}